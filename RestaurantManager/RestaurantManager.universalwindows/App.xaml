<Application
    x:Class="RestaurantManager.universalwindows.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestaurantManager.universalwindows"
    xmlns:Data="using:RestaurantManager.Models"
    RequestedTheme="Dark">
    <Application.Resources>
        <x:String x:Key="DefaultFontSize">32</x:String>
         <LinearGradientBrush x:Key="BlackBlueGradient"  EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="Blue" Offset="1"/>
        </LinearGradientBrush>       
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
        </Style>
<!--    <Style TargetType="Page">
            <Setter Property="Background" Value="{StaticResource BlackBlueGradient}" />
        </Style> This does not work -->
        <Data:DataManager x:Key="DataManager" />
    </Application.Resources>
    
</Application>
